<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/programme"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Spinner android:id="@+id/sp_programme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/listeEtu"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold" />
    <ListView android:id="@+id/lv_etudiant" android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="8dp" tools:layout_editor_absoluteX="10dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>